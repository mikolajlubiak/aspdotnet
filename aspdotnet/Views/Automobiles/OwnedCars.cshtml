@model IEnumerable<aspdotnet.Models.Automobile>

@{
	ViewData["Title"] = "Moje auta";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Moje auta</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				Zdjecie
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cena)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nazwa)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Imie_Nazwisko)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Odbior)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Oddanie)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<img src="/@(item.Id).jpg" style="max-width:200px;width:100%">
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cena) zł
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nazwa)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Imie_Nazwisko)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Odbior)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Oddanie)
				</td>
			</tr>
		}
	</tbody>
</table>
